<section id="portfolio" class="py-5" style="background-color: #010318;">
    <div class="container">
        <h2 class="section-title text-center mb-5" style="color: #ffffff;">Our Portfolio</h2>
        
        <% if (portfolios && portfolios.length > 0) { %>
            <% ['Video Production', 'Design Production', 'Software Development'].forEach(category => { %>
                <h3 class="text-center text-warning mb-4"><%= category %></h3>
                <div class="row">
                    <% portfolios.filter(p => p.category === category).forEach(portfolio => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <img src="<%= portfolio.image %>" class="card-img-top" alt="<%= portfolio.title %>" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title"><%= portfolio.title %></h5>
                                    <p class="card-text"><%= portfolio.description %></p>
                                    <% if (portfolio.drive_url) { %>
                                        <a href="<%= portfolio.drive_url %>" target="_blank" class="btn btn-sm btn-outline-warning me-2">Drive Link</a>
                                    <% } %>
                                    <% if (portfolio.github_url) { %>
                                        <a href="<%= portfolio.github_url %>" target="_blank" class="btn btn-sm btn-outline-secondary">GitHub</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center text-muted">No portfolios found.</p>
        <% } %>
    </div>
</section>
