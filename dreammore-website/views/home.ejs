<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dreammore Company</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="icon" href="../uploads/logodm.jpg" type="image/x-icon" width="100px" height="100px"/>
  <link rel="stylesheet" href="../css/styles.css"/>
  <link rel="stylesheet" href="../css/course.css">
</head>
<body>
  <%- include('./partials/header.ejs') %>

  <!-- Home Section -->
  <section id="home" class="hero-part">

    <br><br><br><br><br><br><br><br><br><br>
     <br><br><br><br><br><br><br><br><br><br>
     
    <div class="container" id="home-content">
      <h1 class="section-title">Welcome to Dreammore Company</h1>
      <p class="lead">Empowering youth through professional services and skill training in Ethiopia and beyond.</p>

      <!-- Auth Buttons -->
      <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#signInModal"  style="background-color: #ff7800; margin-left: 120px; width: 160px;   padding-top: 20px;  border-radius: 20%; box-shadow: solid 6px black;">Sign In</button>
      <button class="btn btn-outline-light" class="signup1"  data-bs-toggle="modal" data-bs-target="#signUpModal" style="background-color: #010318; margin-left: 20px; width: 160px;   padding-top: 20px;  border-radius: 20%; box-shadow: solid 6px black; ">Sign Up</button>

      <a href="#contact" class="btn btn-primary btn-lg mt-3 d-block">Get Started</a>
    </div>
  </section>

  <%- include('services.ejs') %>
  <%- include('courses.ejs') %>
  <%- include('portfolio.ejs') %>
  <%- include('about.ejs') %>
  <%- include('teams.ejs') %>
  <%- include('testimonials.ejs') %>
  <%- include('contact.ejs') %>

  <!-- Sign In Modal -->
  <div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/auth/signin" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signInModalLabel">Sign In</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="signinEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signinEmail" name="email" required>
            </div>
            <div class="mb-3">
              <label for="signinPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signinPassword" name="password" required>
            </div>
            <div class="mt-3">
              <a href="/forgot-password" class="text-secondary">Forgot Password?</a>
            </div>
            <div class="mt-3">
              <span>Don't have an account? </span>
              <button type="button" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signUpModal">Sign Up</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit"  id="getstartedbtn" class="btn btn-primary w-100">Sign In</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Sign Up Modal -->
  <div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/auth/signup" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signUpModalLabel">Sign Up</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="mb-3">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="mb-3">
              <label for="signupEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signupEmail" name="email" required>
            </div>
            <div class="mb-3">
              <label for="signupPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signupPassword" name="password" required>
            </div>
            <div class="mt-3">
              <span>Already have an account? </span>
              <button type="button" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signInModal">Sign In</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success w-100">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
